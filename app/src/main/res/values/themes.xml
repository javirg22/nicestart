<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Nicestart.ActionBar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/fucsia_200</item>
        <item name="colorPrimaryVariant">@color/gren_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/grey_100</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>
    <style name="Theme.Nicestart.ActionBar.Transparent" parent="Theme.Nicestart.ActionBar" >
        <item name="actionBarStyle">@style/TransparentActionBar</item>
        <item name="displayOptions">showHome</item>
    </style>

    <style name="TransparentActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Theme.Nicestart.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:windowIsTranslucent">true</item>

    </style>

</resources>